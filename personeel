// ================= HELPERS =================
function normalize(name){
  return name.toLowerCase().replace(/\s+/g," ").trim();
}

// ================= INIT SCRIPT =================
document.getElementById("startInit").onclick = async () => {
  const log = document.getElementById("log");
  log.textContent = "Start upload...\n";

  for(const naam of Object.keys(personeel)){
    const key = normalize(naam);
    await db.ref("users/" + key).set({
      displayName: naam,
      roles: personeel[naam],
      permanentieCount: 0
    });
    log.textContent += `âœ… ${naam} geplaatst\n`;
  }

  log.textContent += "\nðŸŽ‰ Klaar! Alle personeel staat nu in Firebase.";
};
